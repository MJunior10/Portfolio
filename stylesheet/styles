/* Circles base style */
.circle {
  position: fixed;
  border-radius: 50%;
  background: radial-gradient(circle, #f770f0, #8bf7d6);
  pointer-events: none; /* faz os círculos ignorarem eventos de clique */
  z-index: -1; /* coloca os círculos atrás do conteúdo */
  will-change: transform;
}

/* Sizes */
.large {
  width: 400px;
  height: 400px;
}

.small {
  width: 200px;
  height: 200px;
  background: radial-gradient(circle, #f770f0, #8bf7d6);
}

/* Animations for floating across the screen */

/* Circle 1: moves diagonally top-left to bottom-right */
@keyframes float1 {
  0% {
    transform: translate(-250px, -250px);
  }
  100% {
    transform: translate(calc(100vw + 250px), calc(100vh + 250px));
  }
}

/* Circle 2: moves diagonally bottom-right to top-left */
@keyframes float2 {
  0% {
    transform: translate(calc(100vw + 250px), calc(100vh + 250px));
  }
  100% {
    transform: translate(-250px, -250px);
  }
}

/* Circle 3: moves horizontally left to right */
@keyframes float3 {
  0% {
    transform: translateX(-150px) translateY(50vh);
  }
  100% {
    transform: translateX(calc(100vw + 150px)) translateY(50vh);
  }
}

/* Circle 4: moves vertically top to bottom */
@keyframes float4 {
  0% {
    transform: translateX(50vw) translateY(-150px);
  }
  100% {
    transform: translateX(50vw) translateY(calc(100vh + 150px));
  }
}

/* Assign animations with different durations and delays */
.circle1 {
  animation: float1 40s linear infinite;
  top: 0;
  left: 0;
}

.circle2 {
  animation: float2 50s linear infinite;
  top: 0;
  left: 0;
}

.circle3 {
  animation: float3 35s linear infinite;
  top: 0;
  left: 0;
}

.circle4 {
  animation: float4 45s linear infinite;
  top: 0;
  left: 0;
}
